frontend:
    env_file: .env
    image: vasiliyyakovlev/kittygram_frontend
    command: cp -r /app/build/. /static/
    volumes:
      - static:/static
  gateway:
    image: vasiliyyakovlev/kittygram_gateway
    env_file: .env
    ports:
      - 127.0.0.1:9000:80
    volumes:
      - static:/static
      - media:/media
    depends_on:
      - backend
      - frontend


      server {
  listen 80;
  server_name kittygram.giize.com;
  index index.html;

  location /api/ {
    proxy_set_header Host $http_host;
    proxy_pass http://backend:8000/api/;
  }
  location /admin/ {
    proxy_set_header Host $http_host;
    proxy_pass http://backend:8000/admin/;
  }

  location /media/ {
        alias /media/;
    }

  location / {
    alias /static/build/;
    try_files $uri $uri/ /index.html;
  }
}





sudo docker compose -f docker-com......... exec -it nginx sh 
